{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_END=development nodemon index.js",
    "build:ui": "rm -rf dist && cd ../board/ && npm run build && cp -r dist ../backend",
    "build:ui:windows": "@powershell Remove-Item -Recurse -Force dist && cd ../board && npm run build && @powershell Copy-Item dist -Recurse ../backend",
    "deploy": "fly deploy",
    "deploy:full": "npm run build:ui && npm run deploy",
    "logs:prod": "fly logs",
    "lint": "eslint .",
    "test": "cross-env NODE_ENV=test node --test"
  },
  "author": "Jason Jashari",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.17.1",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@flydotio/dockerfile": "^0.6.1",
    "@stylistic/eslint-plugin-js": "^2.13.0",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}
